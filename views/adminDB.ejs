<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>adminCouchDB</title>
	<link href='css/bootstrap.min.css' rel='stylesheet' type="text/css">
    <link href='css/styleAdmin.css' rel='stylesheet' type="text/css">
</head>
<body>
	<nav class=" navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-header">
			<a class="navbar-brand" href="#">adminCouchDB PETSHOP</a> |
		</div>
	</nav>
	<form action="/adminCouchDB" method="POST">
		<h1>Mascotas</h1>
		<br>
		<table class="table table-striped table-bordered">
			<tr>
				<td><b>nomeMascota</b></td>
				<td><b>tipoMascota</b></td>
				<td><b>razaMascota</b></td>
				<td><b>generoMascota</b></td>
				<td><b>nomePropietario</b></td>
				<td><b>telPropietario</b></td>
				<td><b>Action</b></td>
			</tr>
			<% mascotas.forEach(function(mascota){ %>
			<tr>
				<td><%= mascota.value.nomeMascota %></td>
				<td><%= mascota.value.tipoMascota %></td>
				<td><%= mascota.value.razaMascota %></td>
				<td><%= mascota.value.generoMascota %></td>
				<td><%= mascota.value.propietario.nomePropietario %></td>
				<td><%= mascota.value.propietario.telPropietario %></td>
				<td>
					<form method="POST" action="/adminCouchDB/delete/<%= mascota.key %>">
						<input type="hidden" value="<%= mascota.value.rev %>" name="rev">
						<input type="submit" value=" Delete ">
					</form>
				</td>
			</tr>
			<%}); %>
		</table>
		<input type="submit" value="Actualizar">
	</form>	
	<script type="text/javascript" src="ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.2.min.js"></script>
	<script type="text/javascript" src="ajax.aspnetcdn.com/ajax/bootstrap/3.3.2/bootstrap.min.js"></script>
</body>
</html>
